# Environment Configuration Example
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=production

# Database Configuration
POSTGRES_DB=auth_app_local
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=80

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL
FRONTEND_URL=http://localhost

# Encryption Key for API Keys Storage (must be at least 32 characters)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate-a-secure-key-here

# Bybit API Configuration (Optional)
BYBIT_API_KEY=
BYBIT_API_SECRET=

# BingX API Configuration (Optional)
BINGX_API_KEY=
BINGX_API_SECRET=

# Binance API Configuration (Optional)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Gate.io API Configuration (Optional)
GATEIO_API_KEY=
GATEIO_API_SECRET=
